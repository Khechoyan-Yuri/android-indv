<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuri_khechoyan.queued.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        android:layout_toEndOf="@+id/btn_View"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/queued_logo"
        android:layout_width="343dp"
        android:layout_height="239dp"
        android:src="@drawable/queued"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="43dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="331dp"
        android:layout_alignBottom="@+id/btn_View"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="108dp"
        android:onClick="customerReg"/>

    <Button
        android:id="@+id/btn_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Queue"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/queued_logo"
        android:onClick="ViewQueue"/>
</RelativeLayout>